<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add a New Order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form>
        <div class="modal-body">

          <div class="form-group">
            <label for="purchaseDate">Date</label>
            <input type="date" class="form-control" id="purchaseDate" aria-describedby="purchaseDate"
              placeholder="Enter date">
            {{!-- <small id="dateHelp" class="form-text text-muted">Ex. "2020-07-20" (YYYY-MM-DD)</small> --}}
          </div>

          <div class="form-group">
            <label for="productBranch">Branch</label>
            <br />
            <select id="productBranch" name="productBranch">
              <option value="volvo">Insert</option>
              <option value="saab">Dynamic</option>
              <option value="fiat">Functionality with JS</option>
            </select>
            <small id="selectProductHelp" class="form-text text-muted">Branch the order is placed at.</small>
          </div>

        

          <div class="form-group">
            <label for="customer">Customer</label>
            <br />
            <select id="customer" name="customer">
              <option value="volvo">Insert</option>
              <option value="saab">Dynamic</option>
              <option value="fiat">Functionality with JS</option>
            </select>

          </div>



        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
